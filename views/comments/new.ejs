<% include ../partials/header %>

<div class="row">
    <h1 style="text-align:center; margin: 50px 0px;">Add New Comment to <%= campground.name %></h1>
    <div style="width:30%; margin:0 auto;">
        <form action="/campgrounds/<%= campground._id %>/comments" method="POST">
            <div class="form-group">
                <input class="form-control" type="text" name="comment[text]" placeholder="Text">
            </div>
            <div class="form-group">
                <button class="btn btn-lg btn-default btn-block btn-primary">Submit!</button>
            </div>
        </form>
    </div>
</div>

<% include ../partials/footer %>